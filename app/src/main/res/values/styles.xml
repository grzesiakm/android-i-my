<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutStyle" parent="AppTheme">
        <item name="android:layout_margin">@dimen/layouts_margin</item>
        <item name="android:padding">@dimen/layouts_padding</item>
    </style>

    <style name="InputTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/layouts_padding</item>
    </style>

    <style name="LabelTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/layouts_padding</item>
        <item name="android:paddingLeft">@dimen/layouts_padding</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
